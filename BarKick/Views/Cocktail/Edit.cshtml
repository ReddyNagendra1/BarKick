﻿@model BarKick.Models.ViewModels.UpdateCocktail
@{
    ViewBag.Title = "Edit";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Cocktail</h2>
<form action="/Cocktail/Update/@Model.SelectedCocktail.DrinkId" method="POST">
    <div style="display:none;">
        <input type="number" name="DrinkId" value="@Model.SelectedCocktail.DrinkId" />
    </div>
    <div>
        <label>Cocktail Name:</label>
        <input type="text" name="DrinkName" value="@Model.SelectedCocktail.DrinkName" />
    </div>
    <div>
        <label>Drink Recipe:</label>
        <input type="text" name="DrinkRecipe" value="@Model.SelectedCocktail.DrinkRecipe" />
    </div>
    <div>
        <label>Alcoholic Ingredients:</label>
        <input type="text" name="LiqIn" value="@Model.SelectedCocktail.LiqIn" />
    </div>
    <div>
        <label>Mix Ingredients:</label>
        <input type="text" name="MixIn" value="@Model.SelectedCocktail.MixIn" />
    </div>
    <div>
        <label>Select Bartender:</label>
        <select name="BartenderId">
            <option selected value="@Model.SelectedCocktail.BartenderId">@Model.SelectedCocktail.FirstName @Model.SelectedCocktail.LastName</option>
            @foreach (var bartender in Model.BartenderOptions)
            {
                <option value="@bartender.BartenderId">@bartender.FirstName @bartender.LastName</option>
            }
        </select>
    </div>
    <button type="submit">Update Cocktail</button>
</form>