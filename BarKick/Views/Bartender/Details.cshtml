@model BarKick.Models.ViewModels.DetailsBartender

@{
    ViewBag.Title = "Bartender Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.SelectedBartender.FirstName @Model.SelectedBartender.LastName</h1>

<div>
    <a class="btn btn-primary" href="~/Bartender/Edit/@Model.SelectedBartender.BartenderId">Update Bartender</a>
    <a class="btn btn-danger" href="~/Bartender/DeleteConfirm/@Model.SelectedBartender.BartenderId">Delete Bartender</a>
    <a class="btn btn-secondary" href="~/Bartender/List">Return to Bartender List</a>
</div>

@if (Model.SelectedBartender != null)
{
    <div class="mt-3">
        <h4>Email:</h4>
        <p>@Model.SelectedBartender.Email</p>

        <h4>Venues Employed At:</h4>
        @if (Model.VenueBartenders != null && Model.VenueBartenders.Any())
        {
            <ul>
                @foreach (var venue in Model.VenueBartenders)
                {
                    <li>
                        <a href="/Venue/Details/@venue.VenueID">@venue.VenueName, @venue.VenueLocation</a>
                            <form method="post" action="/Bartender/UnassociateVenue">
                            <input type="hidden" name="VenueID" value="@venue.VenueID" />
                            <input type="hidden" name="id" value="@Model.SelectedBartender.BartenderId" />
                            <input type="submit" value="Remove from @venue.VenueName" class="mt-2 btn btn-danger" />
                        </form>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>This bartender is not currently associated with any venues.</p>
        }

            <div class="mt-3">
                <form method="POST" action="/Bartender/AssociateVenue/@Model.SelectedBartender.BartenderId">
                    <div class="form-group">
                        <label for="VenueID">Associate with Venue:</label>
                        <select id="VenueID" name="VenueID" class="form-control">
                            <option value="">Select a Venue</option>
                            @if (Model.AvailableVenues != null && Model.AvailableVenues.Any())
                            {
                                foreach (var venue in Model.AvailableVenues)
                                {
                                    <option value="@venue.VenueID">@venue.VenueName @venue.VenueLocation</option>
                                }
                            }
                            else
                            {
                                <option value="">No available venues</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success mt-2">Hire at Venue</button>
                </form>
            </div>

        @if (Model.CocktailsMade != null && Model.CocktailsMade.Any())
        {
            <div class="mt-4">
                <h4>Cocktails Created By @Model.SelectedBartender.FirstName</h4>
                <ul>
                    @foreach (var cocktail in Model.CocktailsMade)
                    {
                        <li>
                            <a href="/Cocktail/Details/@cocktail.DrinkId">@cocktail.DrinkName</a>
                        </li>
                    }
                </ul>
            </div>
        }
        else
        {
            <p>No cocktails created by @Model.SelectedBartender.FirstName found.</p>
        }
    </div>
}
else
{
    <div class="alert alert-danger">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

